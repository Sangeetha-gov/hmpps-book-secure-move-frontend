{% extends "layouts/base.njk" %}

{% block pageTitle %}
  {{ t(pageTitle) }} â€“ {{ super() }}
{% endblock %}

{% block content %}
  <header>
    <h1 class="govuk-heading-xl">
      {{ t(pageTitle) }}
    </h1>
  </header>

  <div class="govuk-grid-row">
    {% for key, section in sections %}
      {% if canAccess(section.permission) %}
        <section class="govuk-grid-column-one-half govuk-!-margin-bottom-6">
          <h2 class="govuk-heading-m govuk-!-margin-bottom-1">
            {{ t(section.heading) }}
          </h2>
          <p class="govuk-heading-m">{{ section.time }} <span class="app-secondary-text-colour">({{ t(section.timeAsWords) }})</span></p>

          {{ appFilter({
            items: section.filter,
            classes: "app-filter--stacked"
          }) }}
        </section>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}
