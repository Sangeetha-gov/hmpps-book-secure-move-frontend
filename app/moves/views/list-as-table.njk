{% extends "layouts/list.njk" %}

{% block pageContent %}
  {% if totalMoves > 0 %}
    {{ appFilter({
      items: moveTypeNavigation
    }) }}

    {% if movesAsTable.rows.length %}
      {{ govukTable(movesAsTable) }}
    {% else %}
      {{ appMessage({
        classes: "app-message--muted govuk-!-margin-top-7",
        allowDismiss: false,
        content: {
          html: t("moves::dashboard.single_moves_no_results", {
            context: activeContext
          })
        }
      }) }}
    {% endif %}
  {% else %}
    {{ appMessage({
      classes: "app-message--muted govuk-!-margin-top-7",
      allowDismiss: false,
      content: {
        html: t("moves::dashboard.single_moves_no_results")
      }
    }) }}
  {% endif %}
{% endblock %}
