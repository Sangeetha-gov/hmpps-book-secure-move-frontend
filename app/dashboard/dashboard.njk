{% extends "layouts/govuk.njk" %}

{% block pageTitle %}
  {{ pageTitle }} for {{ moveDate | formatDateAsRelativeDay }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl">{{ pageTitle }} for</span>
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-2">
      {{ appTime({
        datetime: moveDate,
        text: moveDate | formatDateAsRelativeDay
      }) }}
    </h1>

    {{ appPagination({
      classes: "app-pagination--inline",
      previous: {
        href: pagination.prevUrl,
        text: "Previous day"
      },
      next: {
        href: pagination.nextUrl,
        text: "Next day"
      }
    }) }}
  </div>
</div>
{% endblock %}
