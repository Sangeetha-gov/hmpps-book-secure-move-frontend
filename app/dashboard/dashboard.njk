{% extends "layouts/govuk.njk" %}

{% block pageTitle %}
  {{ translate(pageTitle) }} {{ moveDate | formatDateAsRelativeDay }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-xl">{{ translate(pageTitle) }}</span>
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-2">
        {{ appTime({
          datetime: moveDate,
          text: moveDate | formatDateAsRelativeDay
        }) }}
      </h1>

      {{ appPagination({
        classes: "app-pagination--inline",
        previous: {
          href: pagination.prevUrl,
          text: translate("actions.previous_day")
        },
        next: {
          href: pagination.nextUrl,
          text: translate("actions.next_day")
        }
      }) }}

      {{ govukButton({
        text: translate("actions.create_move"),
        href: "/moves/new",
        classes: "govuk-button--start govuk-!-margin-top-2"
      }) }}
    </div>
  </div>

  {% for destination in destinations %}
    <div class="
      govuk-!-margin-top-7
      app-border-top-2
      app-border--black
      ">
      <div class="govuk-!-padding-top-2 govuk-!-padding-bottom-2">
        {{ appData({
          inverted: true,
          classes: "app-data--s",
          label: translate("dashboard.move_to"),
          value: destination.location.title
        }) }}
      </div>

      {% for move in destination.items %}
        {{ appCard(move) }}
      {% endfor %}
    </div>
  {% endfor %}

{% endblock %}
