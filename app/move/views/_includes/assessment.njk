{% for section in assessment %}
  <h2 class="govuk-heading-m govuk-!-margin-bottom-2 govuk-!-margin-top-7">
    {{ t("moves:assessment.categories." + section.category + ".heading") }}
  </h2>

  {% for item in section.items %}
    {% call appPanel({
      attributes: {
        id: item.key
      },
      tag: {
        text: item.title,
        classes: section.tagClass
      }
    }) %}
      {% set itemHtml %}
        {{ item.comments if item.comments else '' }}

        {% if item.created_at %}
          <div class="govuk-!-margin-top-2 govuk-!-font-size-16">
            {{ item.created_at | formatDateWithDay }}
          </div>
        {% endif %}
      {% endset %}

      {{ appMetaList({
        items: [{
          value: {
            html: itemHtml
          }
        }]
      }) }}
    {% endcall %}
  {% else %}
    <p>
      {{ t("moves:assessment.categories." + section.category + ".empty") }}
    </p>
  {% endfor %}
{% endfor %}

<h2 class="govuk-heading-m govuk-!-margin-bottom-2 govuk-!-margin-top-7">
  {{ t("moves:assessment.categories.court.heading") }}
</h2>

{% if courtSummary.rows | length %}
  {{ govukSummaryList(courtSummary) }}
{% else %}
  <p>
    {{ t("moves:assessment.categories.court.empty") }}
  </p>
{% endif %}
