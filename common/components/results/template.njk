<div class="app-results{%- if params.classes %} {{ params.classes }}{% endif %}">
  <div class="app-results__content">
    {% if params.items.length %}
      <dl class="app-results__list">
        {% for item in params.items %}
          {% if item.label and (item.html or item.text) %}
            <div class="app-results__list-item">
              <dt class="app-results__list-key{% if item.hideLabel %} govuk-visually-hidden{% endif %}">
                {{ item.label }}
              </dt>
              <dd class="app-results__list-value">
                {{ item.html | safe if item.html else item.text }}
              </dd>
            </div>
          {% endif %}
        {% endfor %}
      </dl>
    {% endif %}
  </div>
</div>
