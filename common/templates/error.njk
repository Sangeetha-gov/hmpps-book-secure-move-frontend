{% extends "layouts/govuk.njk" %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ statusMessage }}</h1>

  {% if statusCode == '404' %}
    <p>If you entered a web address check it was correct.</p>
  {% elseif statusCode == '403' and error.code === 'EBADCSRFTOKEN' %}
    <p>Try to submit the form again in a few moments.</p>
  {% else %}
    <p>We are experiencing technical problems and the error has been reported. Try again in a few moments.</p>
  {% endif %}

  {% if showStackTrace %}
    <dl class="app-stack-trace">
      <dt class="app-stack-trace__heading">{{ statusCode }} - {{ error.message }}</dt>
      <dd class="app-stack-trace__details">{{ error.stack }}</dd>
    </dl>
  {% endif %}

{% endblock %}
